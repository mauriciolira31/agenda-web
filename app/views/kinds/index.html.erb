<script>
  $.notify("<%= notice%>", "success");
</script>
<h1><%="#{t('messages.listing')} #{@kinds.model.model_name.human(count: @kinds.count)}" %></h1>


<table>
  <thead>
    <tr>
      <th><%= @kinds.model.human_attribute_name("description") %></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @kinds.each do |kind| %>
      <tr style="background:<%=cycle('#B0C4D0', '#DCDCDC')%>">
        <td><%= kind.description %></td>
        <td><%= link_to t('buttons.kinds.edit'), edit_kind_path(kind), class: "btn btn-default" %></td>
        <td><%= link_to t('buttons.kinds.destroy'), kind, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
    <%= link_to t('buttons.kinds.new_kind'), new_kind_path, class: "btn btn-primary" %>
    <%= link_to t('buttons.contacts.home'), root_path, class: "btn btn-success" %>

