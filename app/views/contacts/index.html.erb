<br>
<div class= "basic-grey">
<script>
  $.notify("<%= notice%>", "success");
</script>

<h1><%= "#{t('messages.listing')} #{@contacts.model.model_name.human(count: @contacts.count)}" %></h1>

<table id="1">
  <thead>
    <tr>
      <th><%= @contacts.model.human_attribute_name("name") %></th>
      <th><%= @contacts.model.human_attribute_name("kind") %></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr style="background:<%=cycle('#B0C4D0', '#DCDCDC')%>">
        <td><%= contact.name %></td>
        <td><%= contact.kind.description %></td>
        <td><%= link_to t('buttons.contacts.edit'), edit_contact_path(contact), class: "btn btn-primary" %></td>
        <td><%= link_to t('buttons.contacts.destroy'), contact, class: "btn btn-danger", method: :delete, data: { confirm: t('messages.confirm')} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>  
<%= paginate @contacts %>

<br>
<%= link_to t('buttons.contacts.new'), new_contact_path, class: "btn btn-primary" %>
<%= link_to t('buttons.contacts.home'), root_path, class: "btn btn-success" %>

</div>

